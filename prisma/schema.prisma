generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DomainVerificationStatus{
  PENDING
  VERIFIED
  FAILED
}

enum methodEnum {
  GET
  POST
  PUT
  DELETE
  PATCH
}

enum apiStatusEnum {
  UP
  DOWN
  TIMEOUT
  ERROR
}

model Api{
  id String @id @default(uuid())

  name String
  url String @unique
  method methodEnum
  headers Json?
  body Json?

  upTime Int @default(0) // Percentage of  successful responses
  averageResponseTime Int @default(0) // in milliseconds

  verificationStatus DomainVerificationStatus @default(PENDING)
  verificationCode String @default(cuid())
  lastVerificationAttempt DateTime?
  verificationAttempts Int @default(0)
  verifiedAt DateTime?

  response ApiResponse[]
  dailyStats DailyStats[]

  processingStatus Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApiResponse{
  id String @id @default(uuid())
  apiId String

  responseTime Int // in milliseconds
  statusCode Int
  status apiStatusEnum

  createdAt DateTime @default(now())

  api Api @relation(fields: [apiId], references: [id])
}

model DailyStats{
  id String @id @default(uuid())
  apiId String
  api Api @relation(fields: [apiId], references: [id])

  date DateTime
    @@unique([apiId, date])
  upCount Int @default(0)
  totalCount Int @default(0)

  upTime Int @default(0) // Percentage of successful responses
  
  avgResponseTime Int @default(0)
  maxResponseTime Int @default(0)
}