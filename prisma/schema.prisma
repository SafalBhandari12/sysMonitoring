generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DomainVerificationStatus {
  PENDING
  VERIFIED
  FAILED
}

enum methodEnum {
  GET
  POST
  PUT
  DELETE
  PATCH
}

enum apiStatusEnum {
  UP
  DOWN
  TIMEOUT
  ERROR
}

model Domain {
  id String @id @default(uuid())

  verificationStatus      DomainVerificationStatus @default(PENDING)
  verificationCode        String                   @default(cuid())
  lastVerificationAttempt DateTime?
  verificationAttempts    Int                      @default(0)
  verifiedAt              DateTime?

  apis Api[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Api {
  id String @id @default(uuid())

  domainId  String
  domain Domain @relation(fields: [domainId], references: [id])

  path String

  name    String
  method  methodEnum
  headers Json?
  body    Json?

  upTime              Int @default(0) // Percentage of  successful responses
  averageResponseTime Int @default(0) // in milliseconds

  response   ApiResponse[]
  dailyStats DailyStats[]

  processingStatus Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([domainId, path])
}

model ApiResponse {
  id    String @id @default(uuid())
  apiId String

  responseTime Int // in milliseconds
  statusCode   Int
  status       apiStatusEnum

  createdAt DateTime @default(now())

  api Api @relation(fields: [apiId], references: [id])
}

model DailyStats {
  id    String @id @default(uuid())
  apiId String
  api   Api    @relation(fields: [apiId], references: [id])

  date       DateTime
  upCount    Int      @default(0)
  totalCount Int      @default(0)

  upTime Int @default(0) // Percentage of successful responses

  avgResponseTime Int @default(0)

  @@unique([apiId, date])
}
